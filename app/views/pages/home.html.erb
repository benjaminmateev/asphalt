<%= @page.parts.first.body.html_safe %>

<h2>Kalender</h2>

<div class="events">
  <% @events.each do |event| %>
    <div class="event-image">
      <% if event.image.present? %>
        <%= image_tag(event.image.image.url) %>
      <% else %>
        <%= image_tag("/images/event.jpg") %>
      <% end %>
    </div>
    <div class="event">
      <h3><%= event.start_at.strftime("%a, %d. %b %Y") %>, <%= event.start_at.strftime("%kH%M") %></h3>
      <h3><%= event.title %></h3>
      <%= event.description.html_safe %>
    </div>
    <div class="clearfix">

    </div>
  <% end %>
</div>
